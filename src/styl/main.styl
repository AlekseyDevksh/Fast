@import "wjgrid"
reset-all()

@import "_variables"
@import "_base"

header
	margin: 20px auto
	img
		float: left
nav
	margin-top: 40px
	float: right
	+below(cel)
		margin-top: 0

	ul
		list-style: none
		margin: 0
	li
		float: left
		+below(cel)
			float: none
			padding-bottom: 10px
	a
		text-decoration: none
		padding: 20px 25px
		color: black
		+below(tablet)
			padding: 10px
	.active
		background: black
		color: white
		+below(cel)
			background: none
			color: black
			text-decoration: underline

.banner
	+below(tablet)
		display:none

.icon
	col(1/3)
	text-align: center
	margin-top: 20px
	margin-bottom: 20px
	img
		border-radius 50%

	+below(cel)
		stack()
		margin-top: 20px
		margin-bottom: 20px

article
	margin: 30px auto

.gallery
	img
		col(1/4, cycle: 4)
		max-width: 100%
		margin-bottom: 30px
		+below(cel)
			col(1/2, uncycle:4, cycle:2)
			margin-bottom: 10px
footer
	margin-top: 40px
	background: black
	color: white
	padding: 20px
	text-align: center
